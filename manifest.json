{
    "manifest_version": 2,
    "name": "Domain Copy",
    "description": "Copies the domain of the email's author into the clipboard.",
    "version": "1.0",
    "author": "Leonard Schuler",
    "applications": {
        "gecko": {
            "id": "helloworld@yoursite.com",
            "strict_min_version": "68.0"
        }
    },
    "message_display_action": {
        "default_title": "Copy Domain"
        },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "messagesRead",
        "activeTab",
        "clipboardWrite"
    ]
}
